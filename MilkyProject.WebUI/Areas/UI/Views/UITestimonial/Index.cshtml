@model List<MilkyProject.WebUI.Dtos.TestimonialDto.ResultTestimonialDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UI/Views/Shared/_UILayout.cshtml";
}


<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="section-title bg-white text-center text-primary px-3">Yorumlar</p>
            <h1 class="mb-5">İnsanlar Milky için neler söylüyor?</h1>
        </div>
        <div class="row g-5 align-items-center">
            <div class="col-lg-7 wow fadeInUp" data-wow-delay="0.5s">
                @foreach (var item in Model)
                {
                    <div class="testimonial-item d-flex align-items-center mb-4">
                        <img class="img-fluid rounded-circle me-3" src="@item.imageUrl" alt="" style="width: 80px; height: 80px;">
                        <div>
                            <h5>@item.nameSurname</h5>
                            <span class="text-primary">@item.profession</span>
                            <p class="fs-5">@item.comment</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .testimonial-item img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>
