@model MilkyProject.WebUI.Dtos.ContactDetailDto.ResultContactDetailDto

<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Ofisimiz</h5>
                <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@Model.adress</p>
                <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@Model.phone</p>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i>@Model.email</p>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Hızlı Erişim</h5>
                <a class="btn btn-link" href="/UI/UIAbout/Index/">Hakkımızda</a>
                <a class="btn btn-link" href="/UI/UIContact/Index/">Bize Ulaşın</a>
                <a class="btn btn-link" href="/UI/UIService/Index/">Hizmetlerimiz</a>
            </div>
            @await Component.InvokeAsync("_UILayoutOpenHoursComponentPartial")

            @await Component.InvokeAsync("_UILayoutNewsletterComponentPartial")


        </div>
    </div>
</div>