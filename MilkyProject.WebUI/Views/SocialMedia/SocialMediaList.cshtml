@model List<MilkyProject.WebUI.Dtos.SocialMediaDto.ResultSocialMediaDto>

@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Listesi</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> #</th>
                                        <th>Sosyal Medya</th>
                                        <th>Link</th>
                                        <th>Icon</th>
                                        <th>Çalışan Adı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.socialMediaId</td>
                                            <td>@item.name </td>
                                            <td>@item.url </td>
                                            <td>@item.icon </td>
                                            <td>@item.employee.nameSurname</td>
                                            <td>
                                                <a href="/SocialMedia/DeleteSocialMedia/@item.socialMediaId" class="btn btn-danger">Sil</a>
                                                <a href="/SocialMedia/UpdateSocialMedia/@item.socialMediaId" class="btn btn-warning">Güncelle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info mt-2">Sosyal Media Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
