@model MilkyProject.WebUI.Dtos.ServiceDto.CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Ekle</h4>

            <form class="forms-sample" method="post" action="/Service/CreateService/">
                <div class="form-group">
                    <label>Hizmet Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.title" name="title" placeholder="Hizmet Adı">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="@Model.description" name="description" placeholder="Açıklama">
                </div>
                <div class="form-group">
                    <label>Büyük Görsel</label>
                    <input type="text" class="form-control" asp-for="@Model.imageUrl" name="imageUrl" placeholder="Büyük Görsel">
                </div>
                <div class="form-group">
                    <label>Küçük Görsel</label>
                    <input type="text" class="form-control" asp-for="@Model.smallImageUrl" name="smallImageUrl" placeholder="Küçük Görsel">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Service/ServiceList/" class="btn btn-light">İptal</a>
            </form>
        </div>
    </div>
</div>