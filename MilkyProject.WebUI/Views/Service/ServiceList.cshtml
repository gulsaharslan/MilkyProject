@model List<MilkyProject.WebUI.Dtos.ServiceDto.ResultServiceDto>

@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .square-image {
        width: 100px !important;
        height: 100px !important;
        object-fit: cover !important;
        border-radius: 0 !important;
    }
</style>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Listesi</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>


                                    <tr>
                                        <th> #</th>
                                        <th>Hizmet Adı</th>
                                        <th>Açıklama</th>
                                        <th>Küçük Görsel</th>
                                        <th>Büyük Görsel</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.serviceId</td>
                                            <td>@item.title </td>
                                            <td>@item.description </td>
                                            <td><img src="@item.imageUrl" class="square-image" /> </td>
                                            <td><img src="@item.smallImageUrl" class="square-image" /> </td>
                                            <td>
                                                <a href="/Service/DeleteService/@item.serviceId" class="btn btn-danger">Sil</a>
                                                <a href="/Service/UpdateService/@item.serviceId" class="btn btn-warning">Güncelle</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Service/CreateService/" class="btn btn-info mt-2">Hizmet Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
