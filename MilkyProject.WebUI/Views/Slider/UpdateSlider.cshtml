@model MilkyProject.WebUI.Dtos.SliderDto.UpdateSliderDto

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Güncelle</h4>

            <form class="forms-sample" method="post" action="/Slider/UpdateSlider/" enctype="multipart/form-data">
                <div class="form-group">

                    <input type="text" class="form-control" asp-for="@Model.sliderId" name="sliderId" placeholder="Sldier Id" readonly />
                </div>
                <div class="form-group">
                    <label>Açıklama 1</label>
                    <input type="text" class="form-control" asp-for="@Model.description1" name="description1" placeholder="Açıklama 1">
                </div>
                <div class="form-group">
                    <label>Açıklama 2</label>
                    <input type="text" class="form-control" asp-for="@Model.description2" name="description2" placeholder="Açıklama 2">
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <input type="hidden" name="oldImageUrl" value="@Model.imageUrl" />
                        <img src="@Url.Content("~/upload/" + Model.imageUrl)" class="square-image" alt="Image1" style="width:200px;" />
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Görsel</label>
                            <input style="height:100%" type="file" class="form-control" id="ImageUrl" name="imageUrl" accept=".jpg,.png,.jpeg" />
                        </div>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/Slider/SliderList/" class="btn btn-light">İptal</a>
            </form>
        </div>
    </div>
</div>
