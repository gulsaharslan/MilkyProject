@model List<MilkyProject.WebUI.Dtos.SliderDto.ResultSliderDto>
@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .square-image {
        width: 100px !important;
        height: 100px !important;
        object-fit: cover !important;
        border-radius: 0 !important;
    }
</style>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Slider Listesi</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> #</th>
                                        <th>Açıklama 1</th>
                                        <th>Açıklama 2</th>
                                        <th>Görsel</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.sliderId</td>
                                            <td>@item.description1 </td>
                                            <td>@item.description2 </td>
                                            <td><img src="@item.imageUrl" class="square-image" /></td>
                                            <td>
                                                <a href="/Slider/DeleteSlider/@item.sliderId" class="btn btn-danger">Sil</a>
                                                <a href="/Slider/UpdateSlider/@item.sliderId" class="btn btn-warning">Güncelle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Slider/CreateSlider/" class="btn btn-info mt-2">Slider Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
