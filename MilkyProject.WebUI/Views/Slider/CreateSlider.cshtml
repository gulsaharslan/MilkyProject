@model MilkyProject.WebUI.Dtos.SliderDto.CreateSliderDto

@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider Ekle</h4>

            <form class="forms-sample" method="post" action="/Slider/CreateSlider/">
                <div class="form-group">
                    <label>Açıklama 1</label>
                    <input type="text" class="form-control" asp-for="@Model.description1" name="description1" placeholder="Açıklama 1">
                </div>
                <div class="form-group">
                    <label>Açıklama 2</label>
                    <input type="text" class="form-control" asp-for="@Model.description2" name="description2" placeholder="Açıklama 2">
                </div>
                <div class="form-group">
                    <label>Görsel</label>
                    <input type="text" class="form-control" asp-for="@Model.imageUrl" name="imageUrl" placeholder="Görsel">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Slider/SliderList/" class="btn btn-light">İptal</a>
            </form>
        </div>
    </div>
</div>
