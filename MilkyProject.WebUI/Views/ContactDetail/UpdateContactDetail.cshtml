@model MilkyProject.WebUI.Dtos.ContactDetailDto.UpdateContactDetailDto

@{
    ViewData["Title"] = "UpdateContactDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Detay Bilgisi Güncelle</h4>

            <form class="forms-sample" method="post" action="/ContactDetail/UpdateContactDetail/">
                <div class="form-group">

                    <input type="text" class="form-control" asp-for="@Model.id" name="id" placeholder="İletişim Detay Id" readonly />
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    <input type="text" class="form-control" asp-for="@Model.adress" name="adress" placeholder="Adres">
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <textarea class="form-control" asp-for="@Model.phone" name="phone" placeholder="Telefon"> </textarea>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <textarea class="form-control" asp-for="@Model.email" name="email" placeholder="Email"> </textarea>
                </div>
                <div class="form-group">
                    <label>Çalışma Saatleri</label>
                    <input type="text" class="form-control" asp-for="@Model.businessHour" name="businessHour" placeholder="Çalışma saatleri">
                </div>
                <div class="form-group">
                    <label>Kapalı Günler</label>
                    <input type="text" class="form-control" asp-for="@Model.closedDay" name="closedDay" placeholder="Kapalı günler">
                </div>
              
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="/ContactDetail/ContactDetailList/" class="btn btn-light">İptal</a>
            </form>
        </div>
    </div>
</div>
