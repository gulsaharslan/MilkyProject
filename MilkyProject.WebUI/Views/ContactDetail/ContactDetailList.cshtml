@model List<MilkyProject.WebUI.Dtos.ContactDetailDto.ResultContactDetailDto>

@{
    ViewData["Title"] = "ContactDetailList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İletişim Detay Bilgileri</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>


                                    <tr>
                                        <th> #</th>
                                        <th>Adres</th>
                                        <th>Telefon</th>
                                        <th>Email</th>
                                        <th>Çalışma Saatleri</th>
                                        <th>Kapalı Günler</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.adress </td>
                                            <td>@item.phone</td>
                                            <td>@item.email</td>
                                            <td>@item.businessHour</td>
                                            <td>@item.closedDay</td>
                                            <td>
                                                <a href="/ContactDetail/UpdateContactDetail/@item.id" class="btn btn-warning">Güncelle</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
