@model List<MilkyProject.EntityLayer.Concrete.Product>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card position-relative">
            <div class="card-body">
                <div id="detailedReports" class="carousel slide detailed-report-carousel position-static pt-2" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                
                                    <div class="ml-xl-4 mt-3">
                                        <p class="card-title">Stok Detayları</p>
                                    </div>
                              
                                <div class="col-md-12 col-xl-9">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="table-responsive mb-3 mb-md-0 mt-3">
                                                <table class="table table-borderless report-table">
                                                    @foreach(var item in Model)
                                                    {
                                                    <tr>
                                                        <td class="text-muted">@item.ProductName</td>
                                                        <td class="w-100 px-0">
                                                            <div class="progress progress-md mx-4">
                                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @(item.Stock *2)%" aria-valuenow="@(item.Stock * 2)" aria-valuemin="0" aria-valuemax="100"></div>

                                                            </div>
                                                        </td>
                                                        <td><h5 class="font-weight-bold mb-0">@item.Stock</h5></td>
                                                    </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>