@model List<MilkyProject.WebUI.Dtos.GalleryDto.ResultGalleryDto>

@{
    ViewData["Title"] = "GalleryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .square-image {
        width: 200px !important;
        height: 100px !important;
        object-fit: cover !important;
        border-radius: 0 !important;
    }
</style>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Galeri</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>


                                    <tr>
                                        <th> #</th>
                                        <th>Görsel</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.galleryId</td>
                                            <td><img src="@item.imageUrl" class="square-image" /></td>
                                            <td>
                                                <a href="/Gallery/DeleteGallery/@item.galleryId" class="btn btn-danger">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Gallery/CreateGallery/" class="btn btn-info mt-2">Görsel Ekle</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
