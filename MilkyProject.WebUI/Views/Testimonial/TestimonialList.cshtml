@model List<MilkyProject.WebUI.Dtos.TestimonialDto.ResultTestimonialDto>

@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> #</th>
                                        <th>Ad Soyad</th>
                                        <th>Yorum</th>
                                        <th>Görsel</th>
                                        <th>Meslek</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.testimonialId</td>
                                            <td>@item.nameSurname </td>
                                            <td>@item.comment </td>
                                            <td><img src="@item.imageUrl" class="rounded" /> </td>
                                            <td>@item.profession </td>
                                            <td>
                                                <a href="/Testimonial/DeleteTestimonial/@item.testimonialId" class="btn btn-danger">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
